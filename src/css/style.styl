@font-face
    font-family 'Mukta-M'
    src url('../fonts/Mukta-Medium.ttf')
    font-display swap

@font-face
    font-family 'Noto-L'
    src url('../fonts/NotoSerifJP-Light.otf')
    font-display swap

@font-face
    font-family 'Playfair-R'
    src url('../fonts/PlayfairDisplay-Regular.ttf')
    font-display swap

::selection
    background #e7fcfa

html
    height 100%

body
    margin 0 auto
    overflow-x hidden
    background #fefcfa
    width 100%
    min-height 100%
    scroll-behavior smooth

nav 
    position relative
    display flex
    justify-content space-between
    align-items center
    flex-direction row-reverse
    height 15px
    padding 25px 25px 0px 0px

nav button
    z-index 4
    position absolute
    overflow hidden
    height 75%
    font-size 1.1rem
    font-family 'Mukta-M', sans-serif
    color #3c3c3c
    border none
    background none
    outline none
    cursor pointer

nav button::before
    content ''
    position absolute
    background #3c3c3c
    width 100%
    left 0
    bottom 0
    height 2px
    transform translateX(-100%)
    transition 0.3s linear
    will-change transform

nav button:hover::before
    transform translateX(50%)

.aboutMe
    z-index 10
    position absolute
    display flex
    flex-direction column-reverse
    justify-content flex-end
    top 0
    width 100%
    height 100%
    background #28282800
    padding 2% 0 0 0.5%
    transform translateY(-100%)
    will-change transform

.aboutMeBg 
    background #3c3c3cfe
    top 0
    left 50%
    position absolute
    width 1%
    height 98%
    z-index 0
    will-change transform
    
.goWide
    animation left 1s ease-in 1 normal forwards
    
@keyframes left
    0%
        transform scale(1,1) translateY(0%) 

    35%
        transform scale(1,1) translateY(100%) rotate(0turn)

    70% 
        transform scale(100,1) translateY(100%) rotate(90deg)
        width 1%
    
    100% 
        transform scale(100,1) translateY(100%) rotate(90deg)
        width 103vh

.goWideR
    animation leftReverse 0.8s ease-in 1 reverse both

@keyframes leftReverse
    0%
        transform scale(0,1) translateY(0%)

    35%
        transform scale(0,1) translateY(100%) rotate(0turn)
        opacity 0

    70% 
        transform scale(100,1) translateY(100%) rotate(90deg)
        width 1%
    
    100% 
        transform scale(100,1) translateY(100%) rotate(90deg)
        width 100%

.zIndexPlus
    z-index 3

.transitionAboutMe
    transition 0.6s cubic-bezier(0.53, 0.18, 0.96, 1.21)

.changeColor
    animation changeButton 1s ease-in 1 normal forwards

@keyframes changeButton
    0%
        opacity 0
        color #fefcfa  
    50%
        opacity 0
        color #3c3c3c

    100% 
        opacity 1
        color #fefcfa

.changeColorReverse
    animation changeButtonR 1.2s ease-in 1 normal forwards

@keyframes changeButtonR
    0%
        opacity 0
        color #fefcfa  
    50%
        opacity 0
        color #3c3c3c

    100% 
        opacity 1
        color #3c3c3c

.aboutMeTex
    height 100%
    width 45%
    position absolute
    transform translate(-50%, 50%)
    top 50%
    left 50%
    padding-left 1%
    z-index 2
    display none
    flex-direction column
    justify-content center
    align-items flex-start

.aboutMeTex h4
    font-size 6rem
    font-family 'Noto-L', serif
    text-transform uppercase
    color #fefcfa
    margin 0
    padding-bottom 10%

.aboutMeTex p
    top 20%
    font-size 1.3rem
    font-family 'Mukta-M', sans-serif
    color #fefcfa
    margin 0
    padding-left 15%

.aboutMeTex img 
    width 10%

h1
    position relative
    font-family 'Playfair-R', serif
    margin 0
    padding 0
    width 100%
    bottom 85%
    font-size 4rem
    font-family: ''
    transform translate(0%, 35%)
    text-align center
    user-select none
    line-height 100%
    text-transform uppercase
    will-change transform
    
.three
    top 8%
    position fixed
    z-index -1

.scrolled
    transform translate(0%, 0%) scale(0.4)
    transition 1.3s linear
    

.continueTo
    z-index 1
    position absolute
    left 50%
    top 52%
    transform translate(-50%, -50%)
    height 6%
    cursor pointer
    will-change opacity

.continueTo button
    font-family 'Mukta-M', sans-serif
    color #3c3c3c
    border none
    background none
    outline none
    text-transform uppercase
    cursor pointer

.buttonIsGone
    animation fadeButton 1s ease-in 1 forwards

@keyframes fadeButton 
  0% 
    opacity 1

  50% 
    opacity 0.5

  100% 
    opacity 0
    transform translate(-50%, 100%)
    z-index -1

.arrow
    position relative
    left 48%
    animation light 2s ease-in infinite normal

@keyframes light 
  0% 
    opacity 0
    transform translateY(0px)

  50% 
    opacity 1
    transform translateY(15px)

  100% 
    opacity 0
    transform translateY(0px)

.arrow .topA
    z-index 4
    position absolute
    background #3c3c3c
    height 30px
    width 2px
    border-radius 50px
    cursor pointer

.arrow .topA::after
    content ''
    position absolute
    background #3c3c3c
    top 29px
    height 13px
    width 2px
    transform rotate(140deg)
    transform-origin top
    border-radius 50px

.arrow .topA::before
    content ''
    position absolute
    top 29px
    background #3c3c3c
    height 13px
    width 2px
    transform rotate(-140deg)
    transform-origin top
    border-radius 50px

main
    position relative
    display none
    flex-direction column
    align-items center
    justify-content space-around
    width 100%
    transition .3s linear
    opacity 0
    scroll-behavior smooth


article 
    display flex
    flex-direction column
    justify-content space-around
    align-items flex-start
    width 50%
    height 105%
    transition .3s linear
    opacity 0
    margin 0 0 10% 0
    will-change transform


article:nth-child(1)
    z-index 2
    opacity 1
    

article h3
    font-family 'Mukta-M', sans-serif
    font-size 4rem
    margin 0
    transition .1s linear


article p
    margin-bottom 4.5%
    font-family 'Noto-L', sans-serif
    font-size 1rem
    transition .1s linear


.images
    display flex
    flex-direction row
    justify-content space-between


article .images img
    width 42%
    height 42%
    transition .1s linear


.loadingAnim
    position relative
    margin 0 auto
    top 300px
    width 100px
    height 100px
    border 2px solid gray
    border-radius 10px
    opacity 0
    transition 0.5s ease-out
    transform rotate(0deg) scale(0.5)
    transform-origin center
    animation loadingLoop 1.1s linear infinite forwards normal
    will-change transform

@keyframes loadingLoop 
  0% 
    transform rotate(0deg) scale(0.5)
    border-radius 10px

  50%
    transform rotate(0.5turn) scale(0.7)
    border-radius 50px

  100% 
    transform rotate(1turn) scale(0.5)
    border-radius 10px

footer
    display none
    position relative
    bottom 0
    width 100%
    padding 1% 0% 2.5% 0%
    flex-direction row
    justify-content space-around
    align-items center

footer > *
    border none
    background none
    text-decoration none
    color #3c3c3c
    font-family 'Mukta-M', sans-serif
    font-size 1rem
    cursor pointer
    overflow hidden
    transition .2s linear

footer a:visited
    color #3c3c3c

footer > *:hover
    transform translateY(-10%)
    
/*** RESPONSIVE ***/

@media screen and (min-width 100px) and (max-width 1320px)

    article h3
        font-size 3rem

    
