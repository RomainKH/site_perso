@font-face
    font-family 'Mukta-M'
    src url('../fonts/Mukta-Medium.ttf')

@font-face
    font-family 'Mukta-R'
    src url('../fonts/Mukta-Regular.ttf')

body
    margin 0 auto
    overflow hidden

main
    width 100%
    height 100%
    z-index 2

nav
    position absolute
    top 0
    right 0

nav button
    border none
    font-size 1rem
    font-family 'Mukta-M', sans-serif
    color white
    border none
    background none
    outline none
    text-transform uppercase
    cursor pointer
    transition 0.2s linear

nav button:hover
    border none
    font-size 1.1rem
    font-family 'Mukta-M', sans-serif
    color white
    border none
    background none
    outline none
    text-transform uppercase
    cursor pointer

main h1
    position absolute
    width 100%
    margin 0
    padding 0
    left 50%
    top 2%
    font-size 2rem
    transform translate(-50%, 180%)
    font-size 5rem
    font-family 'Mukta-R', sans-serif
    color white
    text-align center
    user-select none
    line-height 100%
    text-transform uppercase
    will-change transform

.repositionH1
    animation reposition 2.5s linear forwards

@keyframes reposition 
  0% 
    transform translate(-50%, 180%)  
  100% 
    transform translate(-50%, 0%)
    font-size 3rem

.continueTo
    z-index 10
    position absolute
    left 50%
    top 52%
    transform translate(-50%, -50%)
    height 6%
    cursor pointer
    will-change opacity

.continueTo button
    font-family 'Mukta-M', sans-serif
    color white
    border none
    background none
    outline none
    text-transform uppercase
    cursor pointer

.buttonIsGone
    animation fadeButton 1.5s ease-in 1 forwards

@keyframes fadeButton 
  0% 
    opacity 1

  50% 
    opacity 0.5

  100% 
    opacity 0
    transform translate(-50%, 100%)
    z-index -1

.arrow
    position relative
    left 48%
    animation light 2s ease-in infinite normal

@keyframes light 
  0% 
    opacity 0

  50% 
    opacity 1

  100% 
    opacity 0

.arrow .topA
    position absolute
    background white
    height 30px
    width 2px
    border-radius 50px

.arrow .topA::after
    content ''
    position absolute
    background #fff
    top 29px
    height 13px
    width 2px
    transform rotate(140deg)
    transform-origin top
    border-radius 50px

.arrow .topA::before
    content ''
    position absolute
    top 29px
    background #fff
    height 13px
    width 2px
    transform rotate(-140deg)
    transform-origin top
    border-radius 50px

article
  opacity 0
  position absolute
  display flex
  width 70%
  height 45%
  flex-direction row-reverse
  justify-content space-between
  align-items center
  top 50%
  left 50%
  transform translate(-50%, -50%)

article div
  display flex 
  max-width 50%
  height 100%
  flex-direction column
  justify-content space-between
  align-items space-around
  
article p
    margin 0
    padding 0
    color white
    font-family 'Mukta-R', sans-serif
    will-change opacity 

article h2
    margin 0
    padding 0
    color white
    font-family 'Mukta-R', sans-serif
    font-size 3rem
    will-change opacity 

.changeText
    animation changeTxt 0.38s linear 1 normal forwards

.pauseAnim
    animation-play-state paused

@keyframes changeTxt
  50% 
    opacity 0

  100% 
    opacity 1

.arrows
    opacity 0
    visibility hidden

.buttonContainer
    display flex
    flex-direction row-reverse
    justify-content space-between
    align-items flex-end
    max-width 100%
    max-height 55%

.buttonA
    width 25%
    height 18%
    color white
    font-family 'Mukta-M', sans-serif
    background black
    border white 2px solid
    cursor pointer
    transition ease-in 0.3s
    text-transform uppercase
    padding 0
    margin 0

.buttonA:hover
    border #4000CC 2px solid

.buttonB
    width 25%
    height 18%
    color white
    font-family 'Mukta-M', sans-serif
    background black
    border white 2px solid
    cursor pointer
    transition ease-in 0.3s
    text-transform uppercase
    padding 0
    margin 0

.buttonB:hover
    border #4000CC 2px solid

.textAppears
    animation text 2s linear 1 forwards

@keyframes text 
  50% 
    opacity 0

  100% 
    opacity 1
    visibility visible

.bigImg
    position absolute
    left 2%
    top 2%
    width 450px
    height auto
    will-change transform

.getBigger
    animation getBig 0.38s linear 1 forwards normal

@keyframes getBig 
  0% 
    transform scale(0)

  100% 
    transform scale(1)

.getBiggerReverse
    animation getBigR 0.38s linear 1 forwards normal

@keyframes getBigR
  0% 
    transform scale(1)

  100% 
    transform scale(0)

.falseBigImg
    position fixed
    visibility hidden
    left 2%
    top 2%
    width 450px
    height 100%
    transform translate(0%, 0%)
    will-change transform
    animation imgTransition 0.38s ease-in 1 forwards normal

@keyframes imgTransition 
  0% 
    transform translate(0%, 0%)
    visibility visible

  100% 
    transform translate(-150%, 0%)
    visibility visible

.falseBigImgReverse
    position fixed
    visibility hidden
    left 2%
    top 2%
    width 450px
    height 100%
    transform translate(-150%, 0%)
    will-change transform
    animation imgTransitionR 0.38s ease-in 1 forwards normal

@keyframes imgTransitionR 
  0% 
    transform translate(-150%, 0%)
    visibility visible

  100% 
    transform translate(0%, 0%)
    visibility visible

/***** RESPONSIVE DESIGN *****/

//SMARTPHONE
@media screen and (max-width 700px)
    main h1
        font-size 2rem
        position absolute
        top 5%
        width 100%
        transform translate(-50%, 250%)

    .repositionH1
        animation repositionQ 2.5s linear forwards normal

    @keyframes repositionQ 
      0%
        transform translate(-50%, 250%)
      100% 
        transform translate(-50%, -40%)

    article
        opacity 0
        position absolute
        display flex
        width 90%
        height 75%
        flex-direction column-reverse
        justify-content center
        align-content space-between
        top 48%
        left 50%
        transform translate(-50%, -50%)

    article div
        max-width 100%
        height 40%
        transform translate(0%,70%)
        justify-content center

    .bigImg
        position absolute
        width 74%
        height auto
        left 50%
        top 30%
        transform translate(-50%, -50%) scale(1)
        will-change transform
    
    .getBigger
        animation newAnimBig 0.38s linear 1 forwards normal

    @keyframes newAnimBig 
      0% 
        transform translate(-50%, -50%) scale(0)

      100% 
        transform translate(-50%, -50%) scale(1)

    .getBiggerReverse
        animation newGetBigR 0.38s linear 1 forwards normal

    @keyframes newGetBigR
      0% 
        transform translate(-50%, -50%) scale(1)

      100% 
        transform translate(-50%, -50%) scale(0)

    article p
      margin 0
      padding 0
      color white
      font-family 'Mukta-R', sans-serif
      font-size 0.8rem
      will-change opacity 

    article h2
      margin 0
      padding 0
      color white
      font-family 'Mukta-R', sans-serif
      font-size 1.8rem
      will-change opacity 

    .buttonContainer
        top 55%
        height 100%
        width 100%
        position absolute
        flex-direction row-reverse
        justify-content space-between
        align-items center
    
    .buttonA
        width 45%
        height 45%

    .buttonB
        width 45%
        height 45%
    
    .falseBigImg
        position absolute
        width 74%
        height auto
        left 50%
        top 30%
        transform translate(-50%, -50%) scale(1)
        will-change transform
        animation imgTransitionNew 0.38s ease-in 1 forwards normal

    @keyframes imgTransitionNew
      0% 
        transform translate(-50%, -50%)
        visibility visible
    
      100% 
        transform translate(-190%, -50%)
        visibility visible

    .falseBigImgReverse
        position absolute
        width 74%
        height auto
        left 50%
        top 30%
        transform translate(-190%, -50%) scale(1)
        will-change transform
        animation imgTransitionRNew 0.38s ease-in 1 forwards normal

    @keyframes imgTransitionRNew
      0% 
        transform translate(-190%, -50%)
        visibility visible
    
      100% 
        transform translate(-50%, -50%)
        visibility visible


