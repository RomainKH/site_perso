@font-face
    font-family 'Mukta-M'
    src url('../fonts/Mukta-Medium.ttf')
    font-display swap

@font-face
    font-family 'Mukta-R'
    src url('../fonts/Mukta-Regular.ttf')
    font-display swap

@font-face
    font-family 'Noto-L'
    src url('../fonts/NotoSerifJP-Light.otf')
    font-display swap

@font-face
    font-family 'Playfair-R'
    src url('../fonts/PlayfairDisplay-Regular.ttf')
    font-display swap

::selection
    background #e7fcfa

body
    margin 0 auto
    overflow-y scroll
    overflow-x hidden
    background #fefcfa
    scroll-behavior smooth

nav 
    position relative
    display flex
    justify-content space-between
    align-items center
    flex-direction row-reverse
    height 15px
    padding 25px 25px 0px 0px

nav button
    z-index 4
    position absolute
    overflow hidden
    height 75%
    font-size 1.1rem
    font-family 'Mukta-M', sans-serif
    color #3c3c3c
    border none
    background none
    outline none
    text-transform uppercase
    cursor pointer

nav button::before
    content ''
    position absolute
    background #3c3c3c
    width 100%
    left 0
    bottom 0
    height 2px
    transform translateX(-100%)
    transition 0.5s linear
    will-change transform

nav button:hover::before
    transform translateX(100%)

.aboutMe
    position absolute
    display flex
    flex-direction column-reverse
    justify-content flex-end
    top 0
    width 100%
    height 100%
    background #282828
    padding 2% 0 0 0.5%
    transform translateY(-100%)
    will-change transform

.aboutMe > *
    padding-left 1%

.zIndexPlus
    z-index 3

.transitionAboutMe
    transition 0.6s cubic-bezier(0.53, 0.18, 0.96, 1.21)

.goWide
    transform translateY(0%)
.changeColor
    animation changeButton 1s ease-in 1 normal forwards

@keyframes changeButton
    0%
        opacity 0
        color #fefcfa  
    50%
        opacity 0
        color #3c3c3c

    100% 
        opacity 1
        color #fefcfa

.changeColorReverse
    animation changeButtonR 1s ease-in 1 normal forwards

@keyframes changeButtonR
    0%
        opacity 0
        color #fefcfa  
    50%
        opacity 0
        color #3c3c3c

    100% 
        opacity 1
        color #3c3c3c

.aboutMe div
    display flex
    flex-direction column
    justify-content space-around
    align-items flex-start

.aboutMe div h4
    font-size 3rem
    font-family 'Times New Roman', serif
    color #fefcfa
    margin 0

.aboutMe div p
    top 20%
    font-size 1.5rem
    font-family 'Mukta-R', sans-serif
    color #fefcfa
    margin 0

.aboutMe img 
    width 10%

h1
    position absolute
    font-family 'Playfair-R', serif
    margin 0
    padding 0
    width 100%
    bottom 85%
    font-size 4rem
    font-family: ''
    transform translate(0%, 100%)
    text-align center
    user-select none
    line-height 100%
    text-transform uppercase
    will-change transform
    

.scrolled
    transform translate(0%, 50%) scale(0.4)
    transition 1.3s linear
    

.continueTo
    z-index 1
    position absolute
    left 50%
    top 52%
    transform translate(-50%, -50%)
    height 6%
    cursor pointer
    will-change opacity

.continueTo button
    font-family 'Mukta-M', sans-serif
    color #3c3c3c
    border none
    background none
    outline none
    text-transform uppercase
    cursor pointer

.buttonIsGone
    animation fadeButton 1s ease-in 1 forwards

@keyframes fadeButton 
  0% 
    opacity 1

  50% 
    opacity 0.5

  100% 
    opacity 0
    transform translate(-50%, 100%)
    z-index -1

.arrow
    position relative
    left 48%
    animation light 2s ease-in infinite normal

@keyframes light 
  0% 
    opacity 0
    transform translateY(0px)

  50% 
    opacity 1
    transform translateY(15px)

  100% 
    opacity 0
    transform translateY(0px)

.arrow .topA
    z-index 4
    position absolute
    background #3c3c3c
    height 30px
    width 2px
    border-radius 50px
    cursor pointer

.arrow .topA::after
    content ''
    position absolute
    background #3c3c3c
    top 29px
    height 13px
    width 2px
    transform rotate(140deg)
    transform-origin top
    border-radius 50px

.arrow .topA::before
    content ''
    position absolute
    top 29px
    background #3c3c3c
    height 13px
    width 2px
    transform rotate(-140deg)
    transform-origin top
    border-radius 50px

main
    position absolute
    display none
    flex-direction column
    align-items center
    justify-content flex-start
    top 26%
    left 0%
    width 100%
    transition .3s linear
    opacity 0

article 
    display flex
    flex-direction column
    justify-content space-between
    align-items flex-start
    width 60%
    height 100%
    transition .3s linear

article:nth-child(1)
    z-index 2
    opacity 1
    

article:nth-child(2)
    z-index 1
    opacity 0

article:nth-child(3)
    z-index 2
    opacity 0


article h3
    font-family 'Mukta-M', sans-serif
    font-size 4.5rem
    margin 0

article p
    margin-bottom 4.5%
    font-family 'Noto-L', sans-serif
    font-size 1rem

.images
    display flex
    flex-direction row
    justify-content space-between


article .images img
    width 45%
    height 45%

.loadingAnim
    position relative
    margin 0 auto
    top 300px
    width 100px
    height 100px
    border 2px solid gray
    border-radius 10px
    opacity 0
    transition 0.5s ease-out
    transform rotate(0deg) scale(0.5)
    transform-origin center
    animation loadingLoop 1.1s linear infinite forwards normal
    will-change transform

@keyframes loadingLoop 
  0% 
    transform rotate(0deg) scale(0.5)
    border-radius 10px

  50%
    transform rotate(0.5turn) scale(0.7)
    border-radius 50px

  100% 
    transform rotate(1turn) scale(0.5)
    border-radius 10px

.js-canvas
    position absolute
    z-index 0
    opacity 0.4

/*** RESPONSIVE ***/

@media screen and (min-width 100px) and (max-width 1320px)

    article h3
        font-size 3rem

    
