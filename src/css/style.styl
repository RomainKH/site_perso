@font-face
    font-family 'Mukta-M'
    src url('../fonts/Mukta-Medium.ttf')

@font-face
    font-family 'Mukta-R'
    src url('../fonts/Mukta-Regular.ttf')

body
    margin 0 auto
    overflow hidden

main
    z-index 2

main h1
    width 80%
    margin 0
    padding 0
    position absolute
    left 50%
    top 30%
    transform translate(-50%, -50%)
    font-size 5rem
    font-family 'Mukta-R', sans-serif
    color white
    text-align center
    user-select none
    line-height 100%
    text-transform uppercase
    will-change transform

.repositionH1
    animation reposition 2.5s linear forwards

@keyframes reposition 
  0% 
    transform translate(-50%, -50%)  
  100% 
    transform translate(-50%, -310%)
    font-size 3rem

.continueTo
    z-index 10
    position absolute
    left 50%
    top 52%
    transform translate(-50%, -50%)
    height 6%
    cursor pointer
    will-change opacity

.continueTo button
    font-family 'Mukta-M', sans-serif
    color white
    border none
    background none
    outline none
    text-transform uppercase
    cursor pointer

.buttonIsGone
    animation fadeButton 1.5s ease-in 1 forwards

@keyframes fadeButton 
  0% 
    opacity 1

  50% 
    opacity 0.5

  100% 
    opacity 0
    transform translate(-50%, 100%)
    z-index -1

.arrow
    position relative
    left 48%
    animation light 2s ease-in infinite normal

@keyframes light 
  0% 
    opacity 0

  50% 
    opacity 1

  100% 
    opacity 0

.arrow .topA
    position absolute
    background white
    height 30px
    width 2px
    border-radius 50px

.arrow .topA::after
    content ''
    position absolute
    background #fff
    top 29px
    height 13px
    width 2px
    transform rotate(140deg)
    transform-origin top
    border-radius 50px

.arrow .topA::before
    content ''
    position absolute
    top 29px
    background #fff
    height 13px
    width 2px
    transform rotate(-140deg)
    transform-origin top
    border-radius 50px

article
  position absolute
  display flex
  width 55%
  height 52%
  flex-direction row-reverse
  justify-content space-between
  top 50%
  left 55%
  transform translate(-50%, -50%)

article div
  display flex 
  width 60%
  height 40%
  flex-direction column
  justify-content space-between

article p
    opacity 0
    margin 0
    padding 0
    color white
    font-family 'Mukta-R', sans-serif
    will-change opacity 

article h2
    opacity 0
    margin 0
    padding 0
    color white
    font-family 'Mukta-R', sans-serif
    font-size 3rem
    will-change opacity 

.changeText
    animation changeTxt 0.38s linear 1 normal forwards

.pauseAnim
    animation-play-state paused

@keyframes changeTxt
  50% 
    opacity 0

  100% 
    opacity 1

.arrows
    opacity 0
    visibility hidden

.divArrowR
    position absolute
    background #fff
    top 66%
    right 26%
    height 85px
    width 10px
    transform rotate(227deg)
    border-radius 50px

.divArrowR::before
    content ''
    position absolute
    background #fff
    height 85px
    width 10px
    transform rotate(-95deg)
    transform-origin 40px
    border-radius 50px

.buttonA
    opacity 0
    width 7%
    height 13%
    position absolute
    top 61%
    right 23%
    cursor pointer

.textAppears
    animation text 2s linear 1 forwards

@keyframes text 
  50% 
    opacity 0

  100% 
    opacity 1
    visibility visible

.bigImg
    opacity 0
    position absolute
    width 55%
    top 60%
    left 8%
    transform translate(-50%, -50%)
    will-change transform

.getBigger
    animation getBig 0.38s linear 1 forwards normal

@keyframes getBig 
  0% 
    transform translate(-50%, -50%) scale(0)

  100% 
    transform translate(-50%, -50%) scale(1)

.falseBigImg
    position absolute
    z-index 2
    width 55%
    top 60%
    left 8%
    transform translate(-50%, -50%)
    will-change transform
    animation imgTransition 0.38s ease-in 1 forwards normal

@keyframes imgTransition 
  0% 
    transform translate(-50%, -50%)

  100% 
    transform translate(-220%, -50%)

/***** RESPONSIVE DESIGN *****/

@media (max-width 700px) and (min-height 200px) 
    
    main h1
        font-size 3rem

    .repositionH1
        animation repositionQ 2.5s linear forwards normal

    @keyframes repositionQ 
      0%
        transform translate(-50%, -50%)
      100% 
        transform translate(-50%, -190%)
    
    .divArrowR
        position absolute
        background #fff
        top 50%
        right 15%
        height 45px
        width 5px
        transform rotate(227deg)
        border-radius 50px

    .divArrowR::before
        content ''
        position absolute
        background #fff
        height 45px
        width 5px
        transform rotate(-95deg)
        transform-origin 21px
        border-radius 50px

    .buttonA
        opacity 0
        width 7%
        height 13%
        position absolute
        top 45%
        right 12%
        cursor pointer
    